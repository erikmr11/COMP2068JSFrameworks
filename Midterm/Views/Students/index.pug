extends ../layout

block content
  h1 List of all Students
  table.table
    thead
      tr
        th Student ID Number
        th Name
        th Middle Name
        th Last Name
        th Email Address
    tbody
      each student in students
        tr
          td= student.studentNumber
          td= student.firstName
          td= student.middleName
          td= student.lastName
          td= student.emailAddress
          td
            a.btn.btn-primary(href=`/students/${student._id}`) View
            a.btn.btn-warning(href=`/students/${student._id}/edit`) Edit
            form(action=`/students/${student._id}?_method=DELETE`, method='POST', style='display:inline;')
              button.btn.btn-danger(type='submit') Remove
  a.btn.btn-success(href='/students/new') Add Student
